@startuml
!define ACTOR actor

ACTOR Client

package "REST API" {
  label l [{{
  class Sales {
    +GET /sales
    +POST /sales
    +PUT /sales/{id}
    +DELETE /sales/{id}
  }

  class Inventory {
    +GET /inventory
    +POST /inventory
    +PUT /inventory/{id}
    +DELETE /inventory/{id}
  }

  class UserManagement {
    +POST /auth/register
    +POST /auth/login
    +GET /roles
  }

  class Employees {
    +GET /employees
    +POST /employees
    +PUT /employees/{id}
    +DELETE /employees/{id}
  }

  class Clients {
    +GET /clients?query={name|phone|VIN}
    +POST /clients
    +PUT /clients/{id}
    +DELETE /clients/{id}
  }

  class Analytics {
    +GET /analytics/revenue
  }

  class Arrivals {
    +POST /arrivals
    +PUT /arrivals/{id}
    +DELETE /arrivals/{id}
  }

  class GeneralOperations {
    +POST /bulk-upload
  }
  }}]
}

Client -> "REST API" : Makes API Calls
@enduml