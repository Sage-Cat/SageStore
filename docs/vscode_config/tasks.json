{
  "version": "2.0.0",
  "inputs": [
    {
      "id": "buildConfig",
      "type": "pickString",
      "description": "Select the build configuration",
      "options": [
        "-DBUILD_CLIENT=ON",
        "-DBUILD_SERVER=ON",
        "-DBUILD_CLIENT=ON -DBUILD_SERVER=ON",
        "-DBUILD_CLIENT_TESTS=ON",
        "-DBUILD_SERVER_TESTS=ON"
      ],
      "default": "client"
    }
  ],
  "tasks": [
    {
      "label": "clean-build-folder",
      "type": "shell",
      "command": "powershell.exe",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-Command",
        "if (Test-Path '${workspaceFolder}\\build') { Remove-Item -Path '${workspaceFolder}\\build' -Recurse -Force }"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "conan-install",
      "type": "shell",
      "command": "conan install . --output-folder=build --build=missing",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "cmake-configure-debug",
      "type": "shell",
      "command": "cmake .. --preset conan-debug ${input:buildConfig} -DCMAKE_BUILD_TYPE=Debug",
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "cmake-build-debug",
      "type": "shell",
      "command": "ninja",
      "args": [
        "-j4"
      ],
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "clean-and-rebuild",
      "dependsOrder": "sequence",
      "dependsOn": [
        "clean-build-folder",
        "conan-install",
        "cmake-configure-debug",
        "cmake-build-debug"
      ],
      "group": {
        "kind": "build"
      },
      "problemMatcher": []
    },
    {
      "label": "run-client",
      "type": "shell",
      "command": "${workspaceFolder}/build/_client/SageStoreClient.exe",
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "run-server",
      "type": "shell",
      "command": "${workspaceFolder}/build/_server/SageStoreServer.exe",
      "group": "test",
      "problemMatcher": []
    }
  ]
}