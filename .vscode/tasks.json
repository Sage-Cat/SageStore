{
  "version": "2.0.0",
  "inputs": [
    {
      "id": "buildType",
      "type": "pickString",
      "description": "Select CMake build type",
      "options": [
        "Release",
        "Debug"
      ],
      "default": "Release"
    }
  ],
  "tasks": [
    {
      "label": "clean:build-dir",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-E",
        "rm",
        "-rf",
        "build"
      ],
      "problemMatcher": []
    },
    {
      "label": "conan:install",
      "type": "shell",
      "command": "conan",
      "args": [
        "install",
        ".",
        "--output-folder=build",
        "--build=missing",
        "-s",
        "build_type=${input:buildType}"
      ],
      "problemMatcher": []
    },
    {
      "label": "cmake:configure:all",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S",
        ".",
        "-B",
        "build",
        "-G",
        "Ninja",
        "-DCMAKE_TOOLCHAIN_FILE=build/conan_toolchain.cmake",
        "-DCMAKE_POLICY_DEFAULT_CMP0091=NEW",
        "-DCMAKE_BUILD_TYPE=${input:buildType}",
        "-DBUILD_CLIENT=ON",
        "-DBUILD_SERVER=ON",
        "-DBUILD_TESTS=ON"
      ],
      "dependsOrder": "sequence",
      "dependsOn": [
        "conan:install"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "cmake:configure:client",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S",
        ".",
        "-B",
        "build",
        "-G",
        "Ninja",
        "-DCMAKE_TOOLCHAIN_FILE=build/conan_toolchain.cmake",
        "-DCMAKE_POLICY_DEFAULT_CMP0091=NEW",
        "-DCMAKE_BUILD_TYPE=${input:buildType}",
        "-DBUILD_CLIENT=ON",
        "-DBUILD_SERVER=OFF",
        "-DBUILD_TESTS=OFF"
      ],
      "dependsOrder": "sequence",
      "dependsOn": [
        "conan:install"
      ],
      "problemMatcher": []
    },
    {
      "label": "cmake:configure:server",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S",
        ".",
        "-B",
        "build",
        "-G",
        "Ninja",
        "-DCMAKE_TOOLCHAIN_FILE=build/conan_toolchain.cmake",
        "-DCMAKE_POLICY_DEFAULT_CMP0091=NEW",
        "-DCMAKE_BUILD_TYPE=${input:buildType}",
        "-DBUILD_CLIENT=OFF",
        "-DBUILD_SERVER=ON",
        "-DBUILD_TESTS=OFF"
      ],
      "dependsOrder": "sequence",
      "dependsOn": [
        "conan:install"
      ],
      "problemMatcher": []
    },
    {
      "label": "cmake:build",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "build",
        "--parallel"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "ctest:all",
      "type": "shell",
      "command": "ctest",
      "args": [
        "--test-dir",
        "build",
        "--output-on-failure",
        "--verbose"
      ],
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "workflow:build+test",
      "dependsOrder": "sequence",
      "dependsOn": [
        "cmake:configure:all",
        "cmake:build",
        "ctest:all"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "docs:check-links",
      "type": "shell",
      "command": "python3",
      "args": [
        "scripts/check_docs_links.py"
      ],
      "problemMatcher": []
    },
    {
      "label": "docs:doxygen",
      "type": "shell",
      "command": "doxygen",
      "args": [
        "Doxyfile"
      ],
      "problemMatcher": []
    },
    {
      "label": "docs:plantuml:docker",
      "type": "shell",
      "command": "scripts/plantuml/render_puml_docker.sh",
      "args": [
        "docs",
        "png"
      ],
      "problemMatcher": []
    },
    {
      "label": "workflow:docs",
      "dependsOrder": "sequence",
      "dependsOn": [
        "docs:check-links",
        "docs:plantuml:docker",
        "docs:doxygen"
      ],
      "problemMatcher": []
    }
  ]
}
